{
  "type": "object",
  "required": ["name", "description", "examples", "functionName", "params", "tests"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The title of the challenge"
    },
    "description": {
      "type": "string",
      "description": "The description of the challenge"
    },
    "examples": {
      "type": "array",
      "description": "Array of examples",
      "minItems": 1,
      "items": {
        "type": "object",
        "description": "An exemple to illustrate what the function should output, based on the input",
        "required": ["input", "output"],
        "properties": {
          "input": {
            "type": "string",
            "description": "Input for the example"
          },
          "output": {
            "type": "string",
            "description": "Output for the example"
          },
          "note": {
            "type": "string",
            "description": "Optional notes"
          },
          "explanation": {
            "type": "string",
            "description": "Optional explanation"
          }
        }
      }
    },
    "functionName": {
      "type": "string",
      "description": "The name of the function called in the tests"
    },
    "params": {
      "type": "array",
      "description": "The parameters of the function called in the tests",
      "items": {
        "type": "string"
      }
    },
    "tests": {
      "type": "array",
      "description": "The array of generated tests",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["inputs", "expected"],
        "properties": {
          "inputs": {
            "type": "array",
            "description": "The array of inputs for the tested function",
            "items": {
              "type": "string"
            }
          },
          "expected": {
            "type": "string",
            "description": "The expected output of the tested function"
          }
        }
      }
    }
  }
}
