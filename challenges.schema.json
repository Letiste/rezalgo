{
  "type": "object",
  "required": [
    "name",
    "flag",
    "description",
    "constraints",
    "examples",
    "function",
    "memoryLimit",
    "timeLimit",
    "tests"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "The title of the challenge",
      "minLength": 1
    },
    "flag": {
      "type": "string",
      "description": "The flag to validate the challenge CTF, sent as a success",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "The description of the challenge",
      "minLength": 1
    },
    "constraints": {
      "type": "array",
      "description": "Inputs constraints for the challenge",
      "minItems": 1,
      "items": {
        "type": "string",
        "description": "Constraint for the challenge",
        "minLength": 1
      }
    },
    "examples": {
      "type": "array",
      "description": "Array of examples",
      "minItems": 1,
      "items": {
        "type": "object",
        "description": "An exemple to illustrate what the function should output, based on the input",
        "required": ["input", "output"],
        "properties": {
          "input": {
            "type": "string",
            "description": "Input for the example",
            "minLength": 1
          },
          "output": {
            "type": "string",
            "description": "Output for the example",
            "minLength": 1
          },
          "note": {
            "type": "string",
            "description": "Optional notes",
            "minLength": 1
          },
          "explanation": {
            "type": "string",
            "description": "Optional explanation",
            "minLength": 1
          }
        }
      }
    },
    "function": {
      "type": "object",
      "description": "The function called in the tests",
      "required": ["name", "returnType", "params"],
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the function",
          "minLength": 1
        },
        "params": {
          "type": "array",
          "description": "The parameters of the function called in the tests",
          "items": {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of the parameter",
                "minLength": 1
              },
              "type": {
                "type": "string",
                "enum": [
                  "string",
                  "integer",
                  "float",
                  "boolean",
                  "Array<string>",
                  "Array<integer>",
                  "Array<float>",
                  "Array<boolean>"
                ],
                "description": "Type of the parameter"
              }
            }
          }
        },
        "returnType": {
          "type": "string",
          "enum": [
            "string",
            "integer",
            "float",
            "boolean",
            "Array<string>",
            "Array<integer>",
            "Array<float>",
            "Array<boolean>"
          ],
          "description": "The return type of the function"
        }
      }
    },
    "additionalDataStructure": {
      "type": "string",
      "description": "Additional data structure to be used for the challenge",
      "enum": ["LinkedList", "TreeNode"]
    },
    "memoryLimit": {
      "type": "integer",
      "description": "Memory usage's limit in megabytes for the challenge",
      "minimum": 0
    },
    "timeLimit": {
      "type": "number",
      "description": "Time limit in milliseconds for the challenge",
      "minimum": 0
    },
    "tests": {
      "type": "array",
      "description": "The array of generated tests",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["inputs", "expected"],
        "properties": {
          "inputs": {
            "type": "array",
            "description": "The array of inputs for the tested function",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "expected": {
            "type": "string",
            "description": "The expected output of the tested function",
            "minLength": 1
          }
        }
      }
    }
  }
}
