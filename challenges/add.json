{
  "$schema": "../challenges.schema.json",
  "name": "Addition",
  "description": "Create a function `add` that returns the **sum** of the two numbers passed as parameters",
  "constraints": ["0 < a, b"],
  "examples": [
    {
      "input": "a = 2, b = 2",
      "output": "4",
      "explanation": "really ?"
    },
    {
      "input": "a = 4, b = 15",
      "output": "19"
    },
    {
      "input": "a = 4, b = 15",
      "output": "19"
    },
    {
      "input": "a = 4, b = 15",
      "output": "19"
    },
    {
      "input": "a = 4, b = 15",
      "output": "19"
    }
  ],
  "additionalDataStructure": "TreeNode",
  "function": {
    "name": "add",
    "returnType": "integer",
    "params": [
      { "name": "a", "type": "integer" },
      { "name": "b", "type": "integer" }
    ]
  },
  "tests": [
    {
      "inputs": ["2", "2"],
      "expected": "4"
    },
    {
      "inputs": ["2", "3"],
      "expected": "5"
    }
  ]
}
